<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:keepScreenOn="true"
    android:background="@drawable/d_call_screen_background"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/localCardView"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="190dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        app:cardElevation="5dp">

        <FrameLayout
            android:id="@+id/local_video_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>
    </androidx.cardview.widget.CardView>
    <FrameLayout
        android:id="@+id/remote_video_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray" />

    <!-- Timer Text (Next to Three-dot Menu) -->
    <!-- Timer Container (Rounded) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timer_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/d_white_rounded_corner"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@id/btn_menu"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Timer Text -->
        <TextView
            android:id="@+id/tvRemainingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Plus Symbol -->
        <ImageView
            android:id="@+id/iv_plus"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/d_button_bg_white"
            android:src="@drawable/baseline_add_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvRemainingTime"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Three-dot Menu (Top-Right Corner) -->
    <ImageView
        android:id="@+id/btn_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_more_vert_24"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="Menu"/>

    <!-- Female User Image -->
    <ImageView
        android:id="@+id/iv_female_user"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@id/iv_male_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_menu"/>

    <!-- Male User Image -->
    <ImageView
        android:id="@+id/iv_male_user"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/iv_female_user"
        app:layout_constraintEnd_toEndOf="@id/layout_buttons"
        app:layout_constraintTop_toBottomOf="@id/btn_menu"/>

    <!-- Female User Name -->
    <TextView
        android:id="@+id/tv_female_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/iv_female_user"
        app:layout_constraintStart_toStartOf="@id/iv_female_user"
        app:layout_constraintEnd_toEndOf="@id/iv_female_user"
        android:layout_marginTop="8dp"/>

    <!-- Male User Name -->
    <TextView
        android:id="@+id/tv_male_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/iv_male_user"
        app:layout_constraintStart_toStartOf="@id/iv_male_user"
        app:layout_constraintEnd_toEndOf="@id/iv_male_user"
        android:layout_marginTop="8dp"/>

    <!-- Vertical Button Stack (Video Call, Mute, Speaker) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_buttons"
        android:layout_width="50dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/d_button_bg_white"
        app:layout_constraintTop_toBottomOf="@id/btn_menu"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp">

        <!-- Video Call Button -->
        <ImageView
            android:id="@+id/btn_video_call"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/videocall_img"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Mute Button -->
        <ImageView
            android:id="@+id/btn_MuteUnmute"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/unmute_img"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_video_call"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Speaker Button -->
        <ImageView
            android:id="@+id/btn_speaker"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/speakeron_img"
            android:layout_marginTop="@dimen/_12sdp"

            app:layout_constraintTop_toBottomOf="@id/btn_MuteUnmute"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/btn_endCall"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/endcall"
            android:layout_marginTop="@dimen/_12sdp"

            app:layout_constraintTop_toBottomOf="@id/btn_speaker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/JoinButton"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="joinChannel"
        android:text="Join"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/LeaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:onClick="leaveChannel"
        android:text="Leave"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>



















































