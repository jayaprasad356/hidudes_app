<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/_24sdp"
    android:paddingHorizontal="@dimen/_20sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivLogoImage"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/im_logo"
            android:importantForAccessibility="no" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivSecurity"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/im_security"
            android:importantForAccessibility="no" />

    </LinearLayout>

    <TextView
        android:id="@+id/tl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Earphones on!"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintStart_toStartOf="@id/gl_left_margin"
        app:layout_constraintTop_toTopOf="@+id/gl_top_margin" />

    <TextView
        android:id="@+id/tl_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="o real pics, Only Avatar"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintStart_toStartOf="@id/gl_left_margin"
        app:layout_constraintTop_toTopOf="@+id/gl_top_margin" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/ivBottomImage"
        android:layout_width="172dp"
        android:layout_height="190dp"
        android:layout_gravity="end"
        android:importantForAccessibility="no"
        android:src="@drawable/im_onbording1" />
</LinearLayout>
